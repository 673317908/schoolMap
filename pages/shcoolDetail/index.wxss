/* pages/shcoolDetail/index.wxss */
page {
  background: #f5f5f5;
}

swiper {
  width: 750rpx;
  height: 530rpx;
}

swiper image {
  width: 100%;
}

.school_detail_title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 20rpx 36rpx;
  border-bottom: 1rpx solid #eeeeee;
  background: white;
}

.school_logo {
  position: relative;
  border-radius: 50%;
}

.school_logo image {
  width: 150rpx;
  position: absolute;
  top: -100rpx;
  border-radius: 50%;
}

.school_name {
  text-align: center;
  font-weight: 700;
  font-size: 34rpx;
  color: #000000;
  margin-left: 44rpx;
}

.school_address view {
  margin: 10rpx 0;
}

.school_address image {
  width: 70rpx;
}

.school_address {
  padding: 20rpx;
  margin-bottom: 20rpx;
  background: white;
  font-weight: 600;
  font-size: 26rpx;
}

.school_info {
  padding: 20rpx;
  background: white;
}

.school_info_title {
  display: flex;
  margin-bottom: 30rpx;
  font-weight: 600;
}
.school_info_title::before{
  content: "";
  display: block;
  height: 45rpx;
  width: 5rpx;
  background: #61a1e3;
 margin-right: 10rpx;
}

.school_info_content {
  margin-bottom: 20rpx;
  font-size: 26rpx;
  font-weight: 600;
}

video {
  width: 710rpx;
  margin: 30rpx auto;
}