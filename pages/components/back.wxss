/* pages/components/back.wxss */
page {
  position: relative;
}
.back_box {
  width: 62rpx;
  height: 62rpx;
  border-radius: 50%;
  line-height: 100rpx;
  background: white;
  opacity: .7;
  box-shadow: 0rpx 0rpx 10rpx 0rpx #000000;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  top: 50rpx;
  left: 20rpx;
  z-index: 99;
}

.back_box view:nth-child(1) {
  width: 15rpx;
  height: 15rpx;
  border-top: 6rpx solid #000000;
  border-left: 6rpx solid #000000;
  transform: rotate(-45deg);
  margin-right: -19rpx;
  margin-top: -3rpx;
}

.back_box view:nth-child(2) {
  width: 20rpx;
  height: 6rpx;
  background: #000000;
  margin-top: -2rpx;
}